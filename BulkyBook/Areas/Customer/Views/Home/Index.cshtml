@model IEnumerable<ProductModel>
@using BulkyBookModel
<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded"style="margin-bottom: 50px;">
                        <img src="@product.ProductImgUrl" class="card-img top rounded"/>
                        <div class="card-body pb-0">
                        <div class="pl-1">
                            <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.ProductTitle</p>
                            <p class="card-title text-warning text-center">by <b>@product.ProductAuthor</b></p>
                        </div>
                        <div class="pl-1">
                            <p class="text-dark text-opacity-75 text-center mb-0 ">List Price : 
                                <span class="text-decoration-line-through">@string.Format("₹"+product.ProductListPrice)</span>
                            </p>
                        </div>
                        <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center">As low as : <span>@string.Format("₹"+product.ProductPriceHundredPlus)</span></p>
                        </div>
                        </div>  
                        <div>
                            <a asp-action="ProductDetails"
                               asp-route-productid="@product.ProductID"
                            class="btn btn-primary bg-gradient border-0 form-control">Details</a>
                        </div>
                    </div>
                </div>

            </div>
                
        
      
        </div>


    }

</div>